<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DatosIniciales">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ayudanos a darte una mejor experiencia"
        tools:layout_editor_absoluteX="78dp"
        tools:layout_editor_absoluteY="54dp" />

    <Button
        android:id="@+id/button"
        android:layout_width="280dp"
        android:layout_height="46dp"
        android:background="#020202"
        android:text="Comenzar ahora"
        android:textColor="#FFFFFF"
        tools:layout_editor_absoluteX="65dp"
        tools:layout_editor_absoluteY="650dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Advertencia"
        tools:layout_editor_absoluteX="167dp"
        tools:layout_editor_absoluteY="599dp" />

    <RadioGroup
        android:layout_width="248dp"
        android:layout_height="77dp"
        tools:layout_editor_absoluteX="119dp"
        tools:layout_editor_absoluteY="222dp">

        <RadioButton
            android:id="@+id/radioButton"
            android:layout_width="216dp"
            android:layout_height="wrap_content"
            android:text="Masculino" />

        <RadioButton
            android:id="@+id/radioButton2"
            android:layout_width="216dp"
            android:layout_height="wrap_content"
            android:text="Femenino" />
    </RadioGroup>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="¿Cuál es tu sexo?"
        tools:layout_editor_absoluteX="28dp"
        tools:layout_editor_absoluteY="173dp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Altura"
        tools:layout_editor_absoluteX="28dp"
        tools:layout_editor_absoluteY="310dp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="¿Cuál es tu nivel fitness?"
        tools:layout_editor_absoluteX="32dp"
        tools:layout_editor_absoluteY="103dp" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Peso"
        tools:layout_editor_absoluteX="28dp"
        tools:layout_editor_absoluteY="454dp" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Edad"
        tools:layout_editor_absoluteX="28dp"
        tools:layout_editor_absoluteY="540dp" />

    <EditText
        android:id="@+id/editText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="date"
        tools:layout_editor_absoluteX="99dp"
        tools:layout_editor_absoluteY="540dp" />

</androidx.constraintlayout.widget.ConstraintLayout>